@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<link rel="stylesheet" href="~/css/ForgotPassword.css" asp-append-version="true" />

<div class="forgot-password-wrapper">
    <div class="card forgot-password-card">
        <h1>@ViewData["Title"]</h1>
        <h2 class="subtitle">Введіть адресу електронної пошти.</h2>
        <hr />
        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control input-field" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Input.Email">Пошта</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-submit w-100">Скинути пароль</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
